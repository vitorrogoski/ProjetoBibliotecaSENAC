@model List<Usuario>

@{
    ViewData["Title"] = "Usuários cadastrados no sistema:";
}


<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Tipo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Usuario u in Model)
                {
                    <tr>
                        <td>@u.Nome</td>
                        <td>@u.Login</td>
                        @{string tipo = u.Tipo == Usuario.ADMIN ? "Administrador" : "Padrão";}

                        <td>@u.Tipo | @tipo</td>

                        <td><a href="EditarUsuario?id=@u.Id">Editar</a></td>
                        <td><a href="ExcluirUsuario?id=@u.Id">Excluir</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>