@model Usuario

<h1 class="row justify-content-md-center">Realize a Edição do Usuário</h1>
<div class="row justify-content-md-center">
    <form action="editarUsuario" method="POST">

        <div class="form-group">
            <input type="text" name="Nome" id="Nome" class="form-control" value="@Model.Nome">
        </div>
        <div class="form-group">
            <input type="text" name="Login" id="Login" class="form-control" value="@Model.Login">
        </div>
        <div class="form-group">
            <input type="text" name="Senha" id="Senha" class="form-control" value="@Model.Senha">
        </div>
        <div class="form-group">
            <select name="Tipo" id="Tipo" class="form-control">
                <option value="@Usuario.ADMIN">Administrador</option>
                <option value="@Usuario.PADRAO">Padrão</option>
            </select>
        </div>

        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Concluir edição" class="btn btn-dark" />
    </form>
</div>